@using PokedexApp.Shared.Models
@using PokedexApp.Shared.Models.Pokemonss

<div class="flex-row header-bar">
	<div class="left-row">
		<h1><b>My</b>Pokedex</h1>
	</div>
	<div class="right-row">
		<Searchbar Titem="Pokemon" Input="@Input" Placeholder="Find Pokemon..." Update="UpdateAsync" InputUpdated="UpdateInput" GetAsync="Get" />
	</div>
</div>

@code {
	[Parameter]
	public EventCallback<Pokemon> Update{ get; set; }
	private string Input { get; set; } = string.Empty;

	private async Task UpdateAsync(Pokemon result)
	{
		var test = result;
		await Update.InvokeAsync(test);
	}

	public async Task<ResultModel<Pokemon>> Get()
	{
		return await Helpers.HttpHelper.GetPokemonAsync(Input);
	}

	public void UpdateInput(string input)
	{
		Input = input;
	}
}
